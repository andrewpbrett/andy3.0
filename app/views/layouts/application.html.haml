!!! 5
%html
	%head
		%title Andy Brett
		= stylesheet_link_tag :all
		= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"
		= javascript_include_tag 'rails'
		= csrf_meta_tag
	%body
		#container
			#content
				%img#profile_pic{:src => "/images/andy_brett.png"}
				%h1#summary 
					%span#name Andy Brett 
					is a writer, engineer, and athlete living in Silicon Valley
				#nav
					%ul
						%li.selected
							%a{:href => "/writing"} Writing
						%li
							%a{:href => "/readings"} Readings
						%li
							%a{:href => "/projects"} Projects
						%li
							%a{:href => "/photos"} Photos
						%li.last
							%a{:href => "/about"} About							
				.clear
				= yield