- size ||= :post
- show_permalink ||= false
- show_caption ||= false
.image
	- if show_permalink
		.permalink
			= link_to image.created_at.strftime("%b %d"), images_path(image.permalink)
			.clear.medium
	.image_wrapper{ :class => size == :thumbnail ? "thumbnail" : "" }
		%a.gallery_image{ :href => image.image.url(:original) }	
			%img{ :src => "#{image.image.url(size)}" }
	- if show_caption
		.caption
			=raw RubyPants.new(image.caption || "").to_html